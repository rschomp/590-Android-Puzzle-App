<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/button0"
            android:text="0"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:scaleType="fitCenter" />

        <Button
            android:id="@+id/button1"
            android:text="1"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:scaleType="fitCenter" />

        <Button
            android:id="@+id/button2"
            android:text="2"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:scaleType="fitCenter" />

        <Button
            android:id="@+id/button3"
            android:text="3"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:scaleType="fitCenter"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp">
        <Button
            android:id="@+id/button4"
            android:text="4"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:scaleType="fitCenter" />

        <Button
            android:id="@+id/button5"
            android:text="5"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:scaleType="fitCenter" />

        <Button
            android:id="@+id/button6"
            android:text="6"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:scaleType="fitCenter" />

        <Button
            android:id="@+id/button7"
            android:text="7"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:scaleType="fitCenter"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp">
        <Button
            android:id="@+id/button8"
            android:text="8"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:scaleType="fitCenter" />

        <Button
            android:id="@+id/button9"
            android:text="9"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:scaleType="fitCenter" />

        <Button
            android:id="@+id/button10"
            android:text="10"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:scaleType="fitCenter" />

        <Button
            android:id="@+id/button11"
            android:text="11"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:scaleType="fitCenter"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:id="@+id/linearLayout">
        <Button
            android:id="@+id/button12"
            android:text="12"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:scaleType="fitCenter" />

        <Button
            android:id="@+id/button13"
            android:text="13"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:scaleType="fitCenter" />

        <Button
            android:id="@+id/button14"
            android:text="14"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:scaleType="fitCenter" />

        <Button
            android:id="@+id/button15"
            android:text="15"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:scaleType="fitCenter"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/linearLayout">

        <Button
            android:onClick="clickedA"
            android:tag="A"
            android:id="@+id/buttonA"
            android:text="A: 0, 1, 2"
            android:textSize="10sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />

        <Button
            android:onClick="clickedB"
            android:tag="B"
            android:id="@+id/buttonB"
            android:text="B: 3, 7, 9, 11"
            android:textSize="10sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />

        <Button
            android:onClick="clickedC"
            android:tag="C"
            android:id="@+id/buttonC"
            android:text="C: 4, 10, 14, 15"
            android:textSize="10sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />

        <Button
            android:onClick="clickedD"
            android:tag="D"
            android:id="@+id/buttonD"
            android:text="D: 0, 4, 5, 6, 7"
            android:textSize="10sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />

        <Button
            android:onClick="clickedE"
            android:tag="E"
            android:id="@+id/buttonE"
            android:text="E: 6, 7, 8, 10, 12"
            android:textSize="10sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:fontFamily="sans-serif-medium" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/linearLayout">

        <Button
            android:onClick="clickedF"
            android:tag="F"
            android:id="@+id/buttonF"
            android:text="F: 0, 2, 14, 15"
            android:textSize="10sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />

        <Button
            android:onClick="clickedG"
            android:tag="G"
            android:id="@+id/buttonG"
            android:text="G: 3, 14, 15"
            android:textSize="10sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />

        <Button
            android:onClick="clickedH"
            android:tag="H"
            android:id="@+id/buttonH"
            android:text="H: 4, 5, 7, 14, 15"
            android:textSize="10sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />

        <Button
            android:onClick="clickedI"
            android:tag="I"
            android:id="@+id/buttonI"
            android:text="I: 1, 2, 3, 4, 5"
            android:textSize="10sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />

        <Button
            android:onClick="clickedJ"
            android:tag="J"
            android:id="@+id/buttonJ"
            android:text="J: 3, 4, 5, 9, 13"
            android:textSize="10sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="135dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout">

        <Button
            android:onClick="autoSolve"
            android:id="@+id/auto"
            android:text="Auto"
            android:layout_weight="1"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />

        <Button
            android:onClick="clickedRestart"
            android:id="@+id/restart"
            android:text="Restart"
            android:layout_weight="1"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        android:layout_gravity="left"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout">

        <TextView
            android:id="@+id/moveCount"
            android:text="MoveCount: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"/>
        <TextView
            android:id="@+id/sequence"
            android:text="Sequence: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"/>

    </LinearLayout>

</RelativeLayout>